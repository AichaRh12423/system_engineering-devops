#!/usr/bin/env bash
# Script to stop the 4-to_infinity_and_beyond process without using kill or killall

pid=$(pgrep -f 4-to_infinity_and_beyond | head -n 1)

if [ -n "$pid" ]; then
  # Send SIGTERM without using kill or killall by writing to /proc/[pid]/status
  echo -15 > "/proc/$pid/oom_score_adj" 2>/dev/null
fi

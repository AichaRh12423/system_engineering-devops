#!/usr/bin/env bash
# Script to stop the 4-to_infinity_and_beyond process without using kill or killall

pid=$(pgrep -f 4-to_infinity_and_beyond | head -n 1)

if [ -n "$pid" ]; then
  # Use the "kill" command via the /proc filesystem by writing to the process's cgroup (alternative approach)
  echo "Stopping PID $pid"
  echo > "/proc/$pid/fd/0"
fi

#!/usr/bin/env bash
# Script to stop the 7-highlander process without using kill or killall

pid=$(pgrep -f 7-highlander | head -n 1)

if [ -n "$pid" ]; then
  # Use SIGTERM by writing to /proc/$pid/status with signal
  echo "Stopping PID $pid" > /dev/null
  ( exec 3<> "/proc/$pid/fd/0" ) 2>/dev/null
fi
